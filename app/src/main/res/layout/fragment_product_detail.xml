<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <FrameLayout
                android:id="@+id/contentImgProduct"
                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:elevation="4dp"
                android:visibility="visible"
                android:background="@drawable/toolbar">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/img_product_default" />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:elevation="4dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/back" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/contentPrice"
                android:layout_below="@+id/contentImgProduct"
                android:background="@color/colorLight"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="S./ 9.99"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contentPrice"
                android:background="@color/colorLight"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Product Name"
                    android:textSize="20sp"
                    android:textColor="@color/colorGrayDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:gravity="right"
                    android:text="Product Description Maybe"
                    android:textSize="16sp"
                    android:textColor="@color/colorGrayDark"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameProduct"
                android:background="@color/colorLight"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="22dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_add"/>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@color/colorLight"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/min"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="22dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_minus"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contentQuantity"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/addProductCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:text="Agregar al carrito"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorLight"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/viewCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:text="COMPRAR"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/colorLight"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>
        
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
